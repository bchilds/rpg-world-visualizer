    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "type": "node",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "--filter", "client", "dev"],
            "serverReadyAction": {
                "action": "debugWithChrome",
                "pattern": "Local: http://localhost:([0-9]+)",
                "uriFormat": "http://localhost:%s"
            }
        }
    ]
}
